{
  "extends": "inferno-app",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all",
      "semi": false
    }],
    "radix": 0,
    "no-unused-vars": ["error", {
      "args": "after-used"
    }],
    "no-console": "error",
    "no-var": "error",
    "no-debugger": "error",
    "no-alert": "error",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
  }
}
